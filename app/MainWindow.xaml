<Window x:Class="app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBarTray VerticalAlignment="Top">
            <ToolBar>
                <Menu>
                    <MenuItem Header="File">
                        <MenuItem Header="Open" Click="OpenDirectory"/>
                        <MenuItem Header="Exit"/>
                    </MenuItem>
                </Menu>
            </ToolBar>
        </ToolBarTray>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Margin="0,28,0,0" Width="200"/>
        <TextBox x:Name="fileView" HorizontalAlignment="Right" Margin="0,28,0,0" Width="598"/>
    </Grid>
</Window>
